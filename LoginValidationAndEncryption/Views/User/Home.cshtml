@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=PT+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap" rel="stylesheet">
</head>
<body class="font-['PT Sans'] bg-gray-200">

    <div class="container mx-auto my-10 p-6 bg-white rounded-lg shadow-lg">
        <h1 class="text-3xl font-bold text-center">Welcome, @ViewBag.UserName!</h1>
        <p class="text-center mt-4">You have successfully logged in.</p>
        <div class="text-center mt-6">
            <a href="@Url.Action("Login", "User")" class="text-blue-500 hover:underline">Log out</a>
        </div>
    </div>

</body>
</html>
